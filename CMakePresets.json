{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Clang 16.0.0 arm64-apple-darwin24.3.0",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "testPresets": [
        {
            "name": "all-tests",
            "displayName": "All Tests",
            "description": "Run all unit tests",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "bgr-icon-tests",
            "displayName": "BgrIconPiece Tests",
            "description": "Run only BgrIconPiece tests",
            "configurePreset": "default",
            "filter": {
                "include": {
                    "name": ".*BgrIconPiece.*"
                }
            },
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "icon-tests",
            "displayName": "Icon Tests",
            "description": "Run all icon-related tests",
            "configurePreset": "default",
            "filter": {
                "include": {
                    "name": ".*Icon.*"
                }
            },
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}